<?xml version="1.0" encoding="utf-8"?>
   <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

   <!-- ListRow Left side Thumbnail image -->
   <LinearLayout
    android:id="@+id/thumbnail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginRight="5dip"
    android:padding="3dip" >
       <ImageView
        android:id="@+id/icon_list"
        android:contentDescription="@string/app_name"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/feeds" />
   </LinearLayout>
   <!-- Rightend Arrow -->
   <ImageView
    android:id="@+id/imageView1"
    android:contentDescription="@string/app_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:src="@mipmap/ic_details" />
   <!-- City-->
    <!--android:layout_centerVertical="true" -->
   <TextView
    android:id="@+id/row_reference"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/thumbnail"
    android:layout_marginLeft="5dp"

    android:paddingBottom ="5dp"
    android:text="@string/app_name"
    android:textColor="#040404"
    android:textSize="18sp"
    android:textStyle="bold"
    android:typeface="sans" />
   <!-- Weather Information-->
   <TextView
        android:id="@+id/row_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_reference"
        android:layout_alignLeft="@+id/row_reference"
        android:layout_marginTop="1dp"
        android:layout_centerHorizontal="true"
        android:textColor="#343434"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/row_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_datetime"
        android:layout_alignLeft="@+id/row_reference"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:textColor="#343434"
        android:textSize="15sp" />


   </RelativeLayout>